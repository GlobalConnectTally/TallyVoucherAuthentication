<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Sixreportactivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="@color/color_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/outstanding"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="@dimen/_25sdp"
                android:background="@drawable/roundbgi"
                android:elevation="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_orderp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:text="Outstanding "
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/fontsize"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ncrduebill"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/roundbgi"
                android:elevation="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_orderp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:text="NCR Due Bills"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/fontsize"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/businessdate"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/roundbgi"
                android:elevation="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_orderp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:text="Business Date Current Year"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/fontsize"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lastyearbus"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/roundbgi"
                android:elevation="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_orderp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:text="Last Year Business"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/fontsize"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/currentstatus"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/roundbgi"
                android:elevation="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_orderp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:text="Current Status"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/fontsize"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/limit"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/roundbgi"
                android:elevation="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_orderp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:text="Limit"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/fontsize"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
