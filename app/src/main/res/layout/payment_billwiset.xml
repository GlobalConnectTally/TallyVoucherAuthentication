<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/color_white"

    app:cardElevation="5dp"
    app:cardCornerRadius="1dp"
    app:contentPadding="1dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="0dp">

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout

                android:layout_marginTop="2dp"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:textStyle="bold"
                    android:text="Party: "
                    android:textSize="@dimen/fontndogo"
                    android:textColor="@color/color_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <HorizontalScrollView
                    android:scrollbarStyle="outsideOverlay"
                    android:fadeScrollbars="false"
                    android:scrollbarSize="1dp"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:scrollbars="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView

                        android:id="@+id/textp_part"
                        android:text="Lenovo International Ltd"
                        android:textSize="@dimen/fontndogo"
                        android:textColor="@color/color_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </HorizontalScrollView>





            </LinearLayout>


            <LinearLayout
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView

                    android:textStyle="bold"
                    android:text="Date: "
                    android:textSize="@dimen/fontsize"
                    android:textColor="@color/color_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



                <TextView
                    android:textColor="@color/color_black"
                    android:id="@+id/texto_datepp"
                    android:text="23/23/2019"
                    android:textSize="@dimen/fontndogo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout

                android:layout_marginTop="2dp"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:textStyle="bold"
                    android:text="Amount:"
                    android:textSize="@dimen/fontsize"
                    android:textColor="@color/color_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <HorizontalScrollView
                    android:scrollbarStyle="outsideOverlay"
                    android:fadeScrollbars="false"
                    android:scrollbarSize="1dp"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:scrollbars="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:id="@+id/texto_amountpp"
                        android:layout_gravity="center_horizontal"
                        android:text="20000.00"
                        android:textSize="@dimen/fontndogo"
                        android:textColor="@color/color_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </HorizontalScrollView>







            </LinearLayout>

            <LinearLayout

                android:layout_marginTop="8dp"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:textStyle="bold"
                    android:text="BillRef: "
                    android:textSize="@dimen/fontsize"
                    android:textColor="@color/color_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



                <TextView

                    android:id="@+id/txt_reffpp"

                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:text="Refx50950"
                    android:textColor="@color/color_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>




    </LinearLayout>








</androidx.cardview.widget.CardView>