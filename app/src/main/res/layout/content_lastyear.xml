<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/value_partyname"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Party Name "
                    android:textColor="@color/color_black"
                    android:textStyle="bold">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_4sdp"
                        android:text="Bill Value"
                        android:textColor="@color/color_black"
                        android:textStyle="bold">


                    </TextView>

                    <TextView
                        android:id="@+id/bill_value"
                        android:background="@drawable/text_border"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:gravity="center_vertical|end"
                        android:paddingRight="7dp"
                        android:text="0014"
                        android:layout_margin="@dimen/_5sdp"
                        android:textColor="@color/color_black">


                    </TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_4sdp"
                        android:text="Report As On :"
                        android:textColor="@color/color_black"
                        android:textStyle="bold">


                    </TextView>

                    <TextView
                        android:id="@+id/report_date"
                        android:background="@drawable/text_border"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_4sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:text="07-01-2021"
                        android:textColor="@color/color_black">


                    </TextView>


                </LinearLayout>

            </LinearLayout>

            <View
                android:background="#a59f9f"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="685dp"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/backgroundnav"
                    android:orientation="vertical"
                    android:weightSum="6">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="  PGR       "
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/_5sdp"
                        >

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="  Pestisides    "
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/_5sdp"

                        >

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="   Royal      "
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/_5sdp"

                        >

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="  Premium     "
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/_5sdp"

                        >

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="  Classic  "
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/_5sdp"

                        >

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="   Dust      "
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/_5sdp"

                        >

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text=" Total     "
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:visibility="gone">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="6">

                    <TextView
                        android:id="@+id/pgr_bs"
                        android:background="@color/lightgrey"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:paddingRight="7dp"
                        android:text="10,500,4200.00"
                        android:textColor="@color/color_black"
                        android:layout_margin="@dimen/_5sdp"
                        >

                    </TextView>

                    <View
                        android:background="#a59f9f"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                    <TextView
                        android:id="@+id/pesti_bs"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:paddingRight="7dp"
                        android:text="10,500,4200.00"
                        android:textColor="@color/color_black"
                        android:layout_margin="@dimen/_5sdp"

                        >

                    </TextView>
                    <View
                        android:background="#a59f9f"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                    <TextView
                        android:id="@+id/royal_bs"
                        android:background="@color/lightgrey"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:paddingRight="7dp"
                        android:text="10,500,4200.00"
                        android:textColor="@color/color_black"
                        android:layout_margin="@dimen/_5sdp"

                        >

                    </TextView>
                    <View
                        android:background="#a59f9f"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                    <TextView
                        android:id="@+id/premium_bs"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:paddingRight="7dp"
                        android:text="10,500,4200.00"
                        android:textColor="@color/color_black"
                        android:layout_margin="@dimen/_5sdp"

                        >

                    </TextView>
                    <View
                        android:background="#a59f9f"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                    <TextView
                        android:id="@+id/classic_bs"
                        android:background="@color/lightgrey"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:paddingRight="7dp"
                        android:text="10,500,4200.00"
                        android:textColor="@color/color_black"
                        android:layout_margin="@dimen/_5sdp"

                        >

                    </TextView>
                    <View
                        android:background="#a59f9f"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                    <TextView
                        android:id="@+id/dust_bs"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:paddingRight="7dp"
                        android:text="10,500,4200.00"
                        android:textColor="@color/color_black"
                        android:layout_margin="@dimen/_5sdp"

                        >

                    </TextView>
                    <View
                        android:background="#a59f9f"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text=" Total     "
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:visibility="gone">

                    </TextView>
                    <View
                        android:background="#a59f9f"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>

