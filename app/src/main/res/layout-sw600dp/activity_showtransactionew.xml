<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activities.ShowtransactionActivity"
    android:weightSum="4"
    android:orientation="vertical">

    <!--linerlayout no 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:weightSum="2"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/boda_kaki"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:src="@drawable/ic_baseline_format_list_numbered_24">
            </ImageView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:weightSum="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="Voucher No."
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/color_black">
                    </TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:text="S.O.Name"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/color_black">

                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_Vnumber"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_black">
                    </TextView>

                    <TextView
                        android:id="@+id/soname"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:text="Global Software"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_black">

                    </TextView>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <View
            android:background="#a59f9f"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:src="@drawable/ic_baseline_date_range_24">
                </ImageView>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7"
                    android:weightSum="2"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Voucher Date"
                        android:textColor="@color/color_black"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/_10sdp"
                        android:gravity="center_vertical">

                    </TextView>
                    <TextView
                        android:id="@+id/txdate"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="01/12/2020"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/color_black"
                        android:gravity="center_vertical">

                    </TextView>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:src="@drawable/ic_phone_book">
                </ImageView>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7"
                    android:weightSum="2"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Bill Type"
                        android:textColor="@color/color_black"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/_10sdp"
                        android:gravity="center_vertical">

                    </TextView>
                    <TextView
                        android:id="@+id/txt_ReffNo"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="NCR/RPL"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/color_black"
                        android:gravity="center_vertical">

                    </TextView>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--linearlayout no 2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:weightSum="3"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/boda_kaki"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Buyer Details"
            android:textStyle="bold"
            android:textColor="@color/color_black"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_10sdp">

        </TextView>

        <View
            android:background="#a59f9f"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="Party Name"
                android:textColor="@color/color_black"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_10sdp">

            </TextView>

            <TextView
                android:id="@+id/txt_party"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="Parshad Joshi App Global Software"
                android:textColor="@color/color_black"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_10sdp">

            </TextView>

        </LinearLayout>
        <View
            android:background="#a59f9f"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="Total Amount"
                android:textColor="@color/color_black"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_10sdp">

            </TextView>

            <TextView
                android:id="@+id/txt_amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="20000.00"
                android:textColor="@color/color_black"
                android:gravity="center_vertical|end"
                android:paddingRight="@dimen/_10sdp">

            </TextView>

        </LinearLayout>

    </LinearLayout>

    <!--linearlayout no 3-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.2"
        android:weightSum="3"
        android:orientation="vertical"
        android:background="@drawable/boda_kaki"
        android:layout_margin="@dimen/_5sdp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:text="Inventory Details"
            android:textStyle="bold"
            android:textColor="@color/color_black"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_10sdp" >

        </TextView>
        <View
            android:background="#a59f9f"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyl_transaction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:scrollIndicators="right"
                android:scrollbarSize="2dp"
                android:paddingStart="2dp"
                android:scrollbarThumbVertical="@android:color/darker_gray"
                android:scrollbars="vertical"
                android:paddingLeft="2dp">
            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
        <View
            android:background="#a59f9f"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyl_transdisc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="2dp"
                android:paddingTop="1dp"
                android:paddingLeft="2dp">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>

    <!--Linearlayout no 4-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_author"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_baseline_thumb_up_24"
            android:text="Approve  "
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_reject"
            android:drawableLeft="@drawable/ic_baseline_cancel_24"
            android:gravity="center_vertical"
            android:text="Reject"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/txt_show"
            android:drawableLeft="@drawable/ic_baseline_description_24"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="Report"
            android:textStyle="bold"
            />


    </LinearLayout>



</LinearLayout>
