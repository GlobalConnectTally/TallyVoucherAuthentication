<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ShowinvoicesActivity">

    <androidx.appcompat.widget.Toolbar
        app:titleTextColor="@color/color_white"
        android:id="@+id/toolbarSH"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <LinearLayout
        android:layout_below="@+id/toolbarSH"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/fontitem"
            android:text="Invoices  Detail"
            android:textColor="@color/color_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginHorizontal="7dp"
            android:background="@drawable/squareborder"
            android:weightSum="7"
            android:layout_below="@+id/toolbarSH"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@drawable/squareborder"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/fontsize"
                android:text="Item"
                android:textColor="@color/color_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:layout_weight="1"

                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/fontsize"
                android:text="Qty"
                android:textColor="@color/color_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:background="@drawable/squareborder"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/fontsize"
                android:text="Rate"
                android:textColor="@color/color_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:layout_weight="1"

                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/fontsize"
                android:text="Discount"
                android:textColor="@color/color_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:background="@drawable/squareborder"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/fontsize"
                android:text="Amount"
                android:textColor="@color/color_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:background="@drawable/squareborder"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/fontsize"
                android:text="Ledger"
                android:textColor="@color/color_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:background="@drawable/squareborder"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/fontsize"
                android:text="Percentage"
                android:textColor="@color/color_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


        </LinearLayout>

    </LinearLayout>





</RelativeLayout>