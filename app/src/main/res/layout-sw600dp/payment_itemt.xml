<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="146dp"
    app:cardBackgroundColor="@color/color_white"
    android:background="@drawable/roundcard"
    app:cardElevation="7dp"
    app:cardCornerRadius="5dp"
    app:contentPadding="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <RelativeLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingStart="1dp"
                    android:layout_alignParentStart="true"
                    android:paddingEnd="10dp"
                    android:layout_marginEnd="10dp"
                    android:paddingLeft="1dp"
                    android:layout_alignParentLeft="true"
                    android:paddingRight="10dp"
                    android:layout_marginRight="10dp"


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <HorizontalScrollView
                        android:scrollbarStyle="outsideOverlay"
                        android:fadeScrollbars="false"
                        android:scrollbarSize="1dp"
                        android:scrollbarAlwaysDrawHorizontalTrack="true"
                        android:scrollbars="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:paddingRight="3dp"
                            android:textStyle="bold"
                            android:id="@+id/texto_narration"
                            android:text="Michael mussa"
                            android:textSize="@dimen/fontsize"
                            android:textColor="@color/color_black"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </HorizontalScrollView>


                </LinearLayout>



                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:text="Amount: "
                        android:textSize="@dimen/fontndogo"
                        android:textColor="@color/color_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView


                        android:paddingStart="5dp"
                        android:paddingLeft="5dp"
                        android:id="@+id/texto_amountp"
                        android:layout_gravity="center_horizontal"
                        android:text="2000939"
                        android:textSize="@dimen/fontsize"
                        android:textColor="@color/color_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

















            </RelativeLayout>



            <LinearLayout
                android:weightSum="3"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

<!--                    <TextView-->
<!--                        android:textStyle="bold"-->
<!--                        android:text="Date: "-->
<!--                        android:textSize="@dimen/fontndogo"-->
<!--                        android:textColor="@color/color_black"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content" />-->

                    <TextView
                        android:textColor="@color/color_black"
                        android:id="@+id/texto_datep"
                        android:text="23/23/2019"
                        android:textSize="@dimen/fontndogo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:text="VoucherNO:"
                        android:textSize="@dimen/fontndogo"
                        android:textColor="@color/color_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/txt_vouchernp"
                        android:textSize="@dimen/fontndogo"
                        android:paddingStart="5dp"
                        android:paddingLeft="5dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:text="inz178"
                        android:textColor="@color/color_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                   android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:text="User:"
                        android:textSize="@dimen/fontndogo"
                        android:textColor="@color/color_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <HorizontalScrollView
                        android:scrollbarStyle="outsideOverlay"
                        android:fadeScrollbars="false"
                        android:scrollbarSize="1dp"
                        android:scrollbarAlwaysDrawHorizontalTrack="true"
                        android:scrollbars="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/txt_createdbyp"
                            android:textSize="@dimen/fontndogo"
                            android:layout_gravity="center_horizontal"
                            android:text="Michael"
                            android:textColor="@color/color_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </HorizontalScrollView>








                </LinearLayout>








            </LinearLayout>
            <LinearLayout

                android:layout_marginTop="20dp"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:weightSum="3"
                android:background="@color/color_kaki"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="31dp">

                <Button
                    android:layout_weight="1"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_authorp"
                    android:background="@drawable/round_green"
                    android:layout_gravity="center_horizontal"
                    android:drawableRight="@drawable/ic_done_black_24dp"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:text="Approve  "
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/fontndogo"
                    android:textStyle="bold" />


                <Button
                    android:layout_weight="1"
                    android:id="@+id/txt_cancelp"

                    android:drawableRight="@drawable/ic_cancel_black_24dp"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:layout_marginHorizontal="4dp"
                    android:background="@drawable/round_red"
                    android:layout_gravity="center_horizontal"
                    android:text="Reject"
                    android:textSize="@dimen/fontndogo"
                    android:textColor="@color/color_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <Button
                    android:background="@drawable/round_redp"
                    android:id="@+id/txti_morep"

                    android:drawableRight="@drawable/ic_more_vert_black_24dp"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:textSize="@dimen/fontndogo"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:text="More"
                    android:textColor="@color/color_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />





            </LinearLayout>



        </LinearLayout>





    </LinearLayout>






</androidx.cardview.widget.CardView>